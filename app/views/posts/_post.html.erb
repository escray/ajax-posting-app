<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading">
    <%= post.user.display_name %>
  </div>
  <div class="panel-body">

    <br />
    <%= post.content %>
    <br  />
<span id="post-thumbsup-<%= post.id %>" class="label label-success">
  <%= post.likes.count %> 👍
</span>
&nbsp;
<span id="post-redheart-<%= post.id %>" class="label label-info">
  <%= post.favorites.count %>&nbsp;&nbsp;<i class="fa fa-heart" style="color: red" aria-hidden="true"> </i>
</span>
<div class="text-right">
  <span id="post-like-<%= post.id %>">
    <%= render partial: "like", locals: { post: post } %>
  </span>
  <span id="post-favorite-<%= post.id %>">
    <%= render partial: "favorite", locals: { post: post } %>
  </span>
  <% if current_user && post.user == current_user %>
    <%= link_to "Delete", post_path(post), method: :delete, class: "btn btn-danger", remote: true %>
  <% end %>
</div>
</div>
</div>
